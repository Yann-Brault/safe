# The following environment variable setup does not work for the junit command.
export SAFE_HOME="`$(dirname $0)/safe_home`"

if (uname | egrep CYGWIN > /dev/null) ; then
  SEP=";"
else
  SEP=":"
fi
TP="${SAFE_HOME}/lib"
SV=2.11.7

CP="${SAFE_HOME}/target/scala-2.11/classes${SEP}${TP}/xtc.jar${SEP}${TP}/scala-compiler-${SV}.jar${SEP}${TP}/scala-library-${SV}.jar${SEP}${TP}/scala-parser-combinators_2.11-1.0.4.jar${SEP}$CLASSPATH"

if [ -z "$JAVA_HOME" ] ; then
  JAVACMD=java
else
  JAVACMD="$JAVA_HOME/bin/java"
fi

if [ -z "$JAVA_FLAGS" ] ; then
  JAVA_FLAGS="-Xmx30g -Xss32m -Dfile.encoding=utf8"
fi

"$JAVACMD" $JAVA_FLAGS -cp "$CP" kr.ac.kaist.safe.Safe "$@"
EXIT_CODE=$?
wait $!
if [ $EXIT_CODE -ne 0 ] ; then
  exit $EXIT_CODE
fi
