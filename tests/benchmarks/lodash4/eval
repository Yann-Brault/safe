#!/bin/sh

if [ "$#" -eq 1 ]; then
  cat setting.js lodash.js test-setting.js tests/$1.js > __merged__.js
  node __merged__.js
	exit 1
fi

cat setting.js lodash.js test-setting.js > __merged__.js
for file in tests/*; do
  if [ -f "$file" ]; then
    echo "process.stdout.write('Testing $file...');" >> __merged__.js
    cat $file >> __merged__.js
  fi
done
node __merged__.js
